<h1>New Author</h1>
<%= form_with model: @author do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
      <%= form.label :books %>
    <%= form.collection_check_boxes :book_ids, Book.all, :id, :title %>
    </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
<%= link_to 'Back', authors_path %>
