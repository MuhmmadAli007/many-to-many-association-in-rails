<h1>New Book</h1>
<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :authors %>
    <%= form.collection_check_boxes :author_ids, Author.all, :id, :name %>
  </div>
  <div>
    <%= form.submit %>
  </div>
    <% if @book.errors.any? %>
    <ul>
      <% @book.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
<%= link_to 'Back', books_path %>
